@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div id="app">
        <button v-on:click="genFormSpawn = !genFormSpawn; testSpawn = false">Generate</button>
        <button v-on:click="testSpawn = !testSpawn; genFormSpawn = false">Random Test</button>
        <button v-on:click="getEquationCount()">Roll</button>
        <ul id="EqsCount" style="list-style: none;">
            <li v-for="(item, index) in equationCount">
                Type {{index + 1}} equations in DB: {{ item }}
            </li>
        </ul>
        <div>
            @await Html.PartialAsync("GenerationFormPartial")
            @await Html.PartialAsync("TestPartial")
        </div>
    </div>
</div>


<script src="~/bundle/script.js"></script>
<script type="text/x-mathjax-config">
    MathJax.Hub.Config({tex2jax: {inlineMath: [['$','$'], ['\\(','\\)']]}});
</script>
<script id="MathJax-script" async src="https://cdn.jsdelivr.net/npm/mathjax@3/es5/tex-mml-chtml.js"></script>